<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="4dp"
        app:cardCornerRadius="3dp"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_more_gray_24px"
                android:id="@+id/rowCatatanBtnMore"
                android:background="#ffff"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:layout_marginBottom="5dp"
                android:text="Nama Catatan"
                android:id="@+id/rowCatatanNama"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rowCatatanNama"
                android:layout_marginBottom="5dp"
                android:text="Sabtu 17/08/1992 17:08"
                android:visibility="gone"
                android:id="@+id/rowCatatanWaktu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rowCatatanNamaFile"
                android:textStyle="italic"
                android:visibility="gone"
                android:text="nama file"
                android:layout_below="@id/rowCatatanWaktu"/>
            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                app:srcCompat="@drawable/ic_insert_drive_file_gray_24px"
                android:layout_below="@id/rowCatatanNama"
                android:visibility="gone"
                android:id="@+id/rowCatatanBtn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rowCatatanNamaFile"
                android:layout_toLeftOf="@id/rowCatatanBtn"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="Deskrtpsi"
                android:id="@+id/rowCatatanDeskripsi" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>