<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.citrafa.asistenkuliahku.frmJadwalPengganti">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/lblNamaMakulPengganti"
        android:text="Nama Mata Kuliah"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/lblWaktuDanRuangan"
        android:text="Waktu Dan Ruangan"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Dosen"
        android:maxLines="1"
        android:id="@+id/lblnamadosenpengganti"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="Waktu"
        android:id="@+id/txttanggal_waktupengganti"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRuanganPengganti"
        android:maxLines="1"
        android:hint="Ruangan Pengganti"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Simpan"
        android:id="@+id/btnSimpanPengganti"/>
    <me.citrafa.asistenkuliahku.CustomWidget.TVLatoFontMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note : "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Jadwal kuliah regular kamu akan dinonaktifkan sementara saat jadwal pengganti kamu aktif."/>
</LinearLayout>

</RelativeLayout>
