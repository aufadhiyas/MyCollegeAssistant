<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7sp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam"
                android:textSize="15sp"
                android:paddingTop="7sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruangan"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mata Kuliah"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosen"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/namaharijk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nama Harinya"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
            <TextView
                android:id="@+id/waktujamjk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Waktu"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
            <TextView
                android:id="@+id/namaruanganjk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nama Ruangannya"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
            <TextView
                android:id="@+id/namamakuljk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nama Mata Kuliahnya"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
            <TextView
                android:id="@+id/namadosenjk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nama Dosen"
                android:textSize="15sp"
                android:paddingTop="7sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
